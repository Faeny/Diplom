<?xml version="1.0" standalone="no" encoding="Windows-1251"?>
<!--корпус-->
<текст>
	<параграф номер="1">
		<предложение номер="1">
			<источник>
				Косы бывают разными, все они по-своему красивы.
			</источник>
			<слова>

				<слово номер="1" норм_форма="коса">Косы</слово>	
				<слово номер="2" норм_форма="быть">бывают</слово>
				<слово номер="3" норм_форма="разный">разными</слово>
				<слово номер="4">,</слово>
				<слово номер="5" норм_форма="все">все</слово>
				<слово номер="6" норм_форма="коса">они</слово>

				<слово номер="7">по-своему</слово>
				<слово номер="8" норм_форма="красота">красивы</слово>
				<слово номер="9">.</слово>
			</слова>
		</предложение>

		<предложение номер="2">
			<источник>
				Косы делают девушку женственной, нежной, а в тенденциях последней моды еще и стильной.
			</источник>
			<слова>
				<слово номер="1" норм_форма="коса">Косы</слово>
				<слово номер="2" норм_форма="делать">делают</слово>
				<слово номер="3" норм_форма="девушка">девушку</слово>
				<слово номер="4" норм_форма="женственность">женственной</слово>
				<слово номер="5">,</слово>
				<слово номер="6" норм_форма="нежность">нежной</слово>
				<слово номер="7">,</слово>
				<слово номер="8">а</слово>
				<слово номер="9">в</слово>
				<слово номер="10" норм_форма="тенденция">тенденциях</слово>
				<слово номер="11" норм_форма="последний">последней</слово>
				<слово номер="12" норм_форма="мода">моды</слово>
				<слово номер="13">еще</слово>
				<слово номер="14">и</слово>
				<слово номер="15" норм_форма="стиль">стильной</слово>
				<слово номер="16">.</слово>
			</слова>
		</предложение>
		<предложение номер="3">
			<источник>
				Кончено, не стоит избегать причесок с плетением длинноволосым девушкам, ведь правильно, красиво и стильно заплетенная коса выглядит очень современно.
			</источник>
			<слова>
				<слово номер="1">Кончено</слово>
				<слово номер="2">,</слово>
				<слово номер="3">не</слово>
				<слово номер="4" норм_форма="не нужно">стоит</слово>
				<слово номер="5" норм_форма="избегать">избегать</слово>
				<слово номер="6" норм_форма="прическа">причесок</слово>
				<слово номер="7">с</слово>
				<слово номер="8" норм_форма="плетение">плетением</слово>
				<слово номер="9" норм_форма="длинные">длинноволосым</слово>
				<слово номер="10" норм_форма="девушка">девушкам</слово>
				<слово номер="11">,</слово>
				<слово номер="12">ведь</слово>
				<слово номер="13" норм_форма="правильно">правильно</слово>
				<слово номер="14">,</слово>
				<слово номер="15" норм_форма="красота">красиво</слово>
				<слово номер="16">и</слово>
				<слово номер="17" норм_форма="стиль">стильно</слово>
				<слово номер="18" норм_форма="плетение">заплетенная</слово>
				<слово номер="19" норм_форма="коса">коса</слово>
				<слово номер="20" норм_форма="выглядеть">выглядит</слово>
				<слово номер="21" норм_форма="очень">очень</слово>
				<слово номер="22">.</слово>
			</слова>
		</предложение>
		<предложение номер="4">
			<источник>Косички подходят всем: маленьким девочкам и взрослым девушкам.</источник>
			<слова>
				<слово номер="1" норм_форма="коса">Косички</слово>
				<слово номер="2" норм_форма="подходить">подходят</слово>
				<слово номер="3" норм_форма="все">всем</слово>
				<слово номер="4">:</слово>
				<слово номер="5" норм_форма="маленькая">маленьким</слово>
				<слово номер="6" норм_форма="девочка">девочкам</слово>
				<слово номер="7">и</слово>
				<слово номер="8">взрослым</слово>
				<слово номер="9" норм_форма="девушка">девушкам</слово>
				<слово номер="10">.</слово>
			</слова>
		</предложение>
		<предложение номер="5">
			<источник>Но для создания таких причесок нужно иметь длинные или средние волосы, а также знать схему плетения, чтобы самостоятельно создавать прекрасные укладки.</источник>
			<слова>
				<слово номер="1">Но</слово>
				<слово номер="2">для</слово>
				<слово номер="3" норм_форма="создать">создания</слово>
				<слово номер="4" норм_форма="такие">таких</слово>
				<слово номер="5" норм_форма="причёска">причесок</слово>
				<слово номер="6">нужно</слово>
				<слово номер="7" норм_форма="иметь">иметь</слово>
				<слово номер="8" норм_форма="длинные">длинные</слово>
				<слово номер="9">или</слово>
				<слово номер="10" норм_форма="средние">средние</слово>
				<слово номер="12">,</слово>
				<слово номер="13">а</слово>
				<слово номер="14">также</слово>
				<слово номер="15" норм_форма="знание">знать</слово>
				<слово номер="16" норм_форма="схема">схему</слово>
				<слово номер="17" норм_форма="плетение">плетения</слово>
				<слово номер="18">,</слово>
				<слово номер="19">чтобы</слово>
				<слово номер="20">самостоятельно</слово>
				<слово номер="21" норм_форма="создавать">создавать</слово>
				<слово номер="22" норм_форма="прекрасное">прекрасные</слово>
				<слово номер="23" норм_форма="укладка">укладки</слово>
				<слово номер="24">.</слово>
			</слова>
		</предложение>

	</параграф>
</текст>